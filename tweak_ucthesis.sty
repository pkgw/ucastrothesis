%% Redefine these environments so that they do not uppercase the headings

\def\chaptermark#1{%
	\markboth{\@chapapp\ \thechapter.~~  #1}{}}
\def\sectionmark#1{%
	\markright{Section \thesection.~~  #1}}

\def\tableofcontents{\@restonecolfalse
